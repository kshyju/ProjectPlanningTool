<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title | TeamBins</title>
    @Styles.Render("~/Content/css")
   <script src="~/Scripts/jquery-2.0.3.min.js"></script>   
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
</head>
@using TechiesWeb.TeamBins.HelperMethods
<body>
    <div>      
        @Html.Action("MenuHeader", "Users")       
        @Html.AlertMessages()
        <div class="content">
            <div class="central">
                @RenderBody()
            </div>
        </div>
    </div>
    <script type="text/javascript">
        function ShowModel(url, title) {
            $("#modal").remove();
            $.get(url, function (data) {
                $('<div id="modal" class="modal fade">' + data + '</div>').modal();
            });
        }
        $(function () {            
            $(document).on("click", "a.popup", function (e) {
                e.preventDefault();                         
                ShowModel($(this).attr("href"));
            });
            $("a.a-current-team").click(function (e) {
                e.preventDefault();
                var _this = $(this);
                if (_this.data("state") == "selected") {
                    $("#available-teams").fadeIn(100);
                    _this.data("state", "expanded");
                }
                else {
                    $("#available-teams").fadeOut(100);
                    _this.data("state", "selected");
                }
            });
            setTimeout(function () { $('#success-message').slideUp(300); }, 6000);
            

        });
    </script>
    <!--Google analytics-->

    <!--Google analytics ends-->
</body>
</html>

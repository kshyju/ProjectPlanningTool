@model TechiesWeb.TeamBins.ViewModels.ForgotPasswordVM
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_SignUpLayout.cshtml";
}

<div class="signUpContainer">
<h1>Lost password ?</h1>
<div class="divCenterMsg">You forgot your password? No problem. Give us your email address and we'll send you a message with some simple instructions to reset it.</div>
<div class="divSignUp">
@using(Html.BeginForm())
{
<table class="tblEntry register">

    <tr>
        <td>
            @Html.ValidationSummary()
        </td>
    </tr>   
    <tr>
        <th>Your Email</th>
    </tr>
    <tr>
        <td>
            @Html.TextBoxFor(x=>x.Email)
        </td>
    </tr> 
    <tr>
        <td>
            <input type="submit" value="Reset Password" />
        </td>
    </tr>
</table>

}

</div>
</div>